#:kivy 1.8.0

<Root>:
    camera: camera
    
    Camera:
        id: camera
        play: True
        resolution: 2000, 2000
        pos: root.pos
        size: root.size

    ShutterButton:
        size_hint: None, None
        size: dp(96), dp(96)
        pos_hint: {'y': 0, 'center_x': .5}
        source: "camera.png"
        on_release: app.shoot()